# Caskr Production Environment Configuration
# Copy this file to .env.production and fill in the values

# ============================================
# DATABASE CONFIGURATION
# ============================================
POSTGRES_USER=caskr_prod
POSTGRES_PASSWORD=<STRONG_PASSWORD_HERE>
POSTGRES_DB=caskr_production

# ============================================
# JWT AUTHENTICATION
# ============================================
# Generate a secure key: openssl rand -base64 64
JWT_SECRET_KEY=<YOUR_64_CHARACTER_JWT_SECRET>

# ============================================
# SENDGRID EMAIL SERVICE
# ============================================
SENDGRID_API_KEY=<YOUR_SENDGRID_API_KEY>

# ============================================
# KEYCLOAK CONFIGURATION
# ============================================
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=<STRONG_ADMIN_PASSWORD>
KEYCLOAK_CLIENT_SECRET=<YOUR_CLIENT_SECRET>
KEYCLOAK_ADMIN_USER=<ADMIN_EMAIL>

# ============================================
# QUICKBOOKS INTEGRATION (Optional)
# ============================================
QUICKBOOKS_CLIENT_ID=
QUICKBOOKS_CLIENT_SECRET=
QUICKBOOKS_REDIRECT_URI=https://caskr.co/api/quickbooks/callback

# ============================================
# DEPLOYMENT SETTINGS
# ============================================
# Docker registry for pushing images
DOCKER_REGISTRY=your-registry.example.com
DOCKER_TAG=latest
